<header class="header">
	<div class="title">
		<h1>Movie Watchlist</h1>
		<h2>Movie Watchlist</h2>
	</div>
</header>

<style>
	:global(html, body) {
		margin: 0;
		padding: 0;
	}

	.header {
		position: relative;
		width: 100%;
		height: 40vh;
		display: flex;
		align-items: center;
		justify-content: space-around;
		overflow: hidden;
	}

	.header::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: url("/watchlist-bg.png");
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		opacity: 0.5;
		z-index: 1;
	}

	.header > .title {
		display: flex;
		flex-direction: row;
		align-items: center;
		gap: 3rem;
		z-index: 2;
		color: white;
		margin: 0;
		text-shadow: 0 2px 4px black;
	}
	@media (max-width: 600px) {
		.header > .title {
			flex-direction: column;
		}
	}
	h1 {
		text-align: left;
		font-size: 64px;
	}
	h2 {
		font-size: 32px;
	}
</style>
