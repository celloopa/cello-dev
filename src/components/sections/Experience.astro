---
import { work } from "@cv";
import Section from "@/components/Section.astro";
import "@/styles/colors.css";
---

<Section title="Work Experience">
	<ul>
		{
			work.map(
				({
					name,
					startDate,
					endDate,
					position,
					summary,
					highlights,
					url,
				}) => {
					const startYear = new Date(startDate).getFullYear();
					const endYear = endDate ? new Date(endDate).getFullYear() : "Present";
					const isSameYear = startYear === endYear;

					return (
						<li>
							<article>
								<header>
									<div class="job-info">
										<h3>
											<a href={url} title={`View ${name}`} target="_blank">
												{name}
											</a>
										</h3>
										<h4>{position}</h4>
									</div>
									<time class="date-range">
										{isSameYear ? startYear : `${startYear} - ${endYear}`}
									</time>
								</header>
								<footer>
									<h5>
										{
											summary
										}
									</h5>
									<div>
										{highlights.map(
											(
												highlight,
											) => (
												<p>
													{
														highlight
													}
												</p>
											),
										)}
									</div>
								</footer>
							</article>
						</li>
					);
				},
			)
		}
	</ul>
</Section>

<style>
	ul {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		margin: 1rem 0 0 0;
		padding: 0;
		list-style: none;
	}

	li {
		padding-bottom: 1.5rem;
		border-bottom: 1px solid rgba(var(--color-text-rgb), 0.1);
	}

	li:last-child {
		border-bottom: none;
		padding-bottom: 0;
	}

	header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		gap: 1rem;
	}

	.job-info {
		flex: 1;
		margin: 0;
	}

	article h3 {
		font-size: 1.1rem;
		font-weight: 700;
		line-height: 1.2;
		margin: 0;
		padding: 0;
	}

	article a {
		color: var(--color-text);
		transition: color 0.2s ease;
	}

	article a:hover {
		color: var(--color-accent);
	}

	article h4 {
		font-size: 0.9rem;
		font-weight: 600;
		color: var(--color-accent);
		margin: 0.25rem 0 0 0;
		padding: 0;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	article h5 {
		font-weight: 500;
		font-size: 0.9rem;
		color: var(--color-text);
		margin: 0.75rem 0 0.5rem 0;
		padding: 0;
		line-height: 1.5;
	}

	article p {
		font-weight: 400;
		font-size: 0.85rem;
		line-height: 1.6;
		margin: 0.25rem 0;
		padding: 0;
		opacity: 0.85;
	}

	footer {
		margin-top: 0.5rem;
	}

	footer > div {
		margin-top: 0.5rem;
	}

	.date-range {
		color: var(--color-accent);
		font-size: 0.8rem;
		font-weight: 600;
		white-space: nowrap;
		padding: 0;
		margin: 0;
	}

	@media (width <= 700px) {
		header {
			flex-direction: column;
			gap: 0.25rem;
		}

		.date-range {
			font-size: 0.75rem;
		}
	}
</style>
