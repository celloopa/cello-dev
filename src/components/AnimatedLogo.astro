</div>

<style>
	.animated-logo {
		width: 68px;
		height: 68px;
		position: relative;
	}

	.logo-svg {
		width: 100%;
		height: 100%;
		overflow: visible;
	}

	.logo-fallback {
		display: none;
		width: 100%;
		height: 100%;
		position: absolute;
		top: 0;
		left: 0;
	}

	/* Default: dark mode - C is light colored */
	.c-fill {
		color: var(--color-starlight);
	}

	/* Light mode - C is dark colored */
	:global([data-theme="light"]) .c-fill {
		color: var(--color-midnight);
	}

	/* Animation keyframes */
	@keyframes logoSlideFromLeft {
		0% {
			opacity: 0;
			transform: translateX(-30px) rotate(-10deg);
		}
		15% {
			opacity: 1;
			transform: translateX(0) rotate(0deg);
		}
		85% {
			opacity: 1;
			transform: translateX(0) rotate(0deg);
		}
		95% {
			opacity: 0;
			transform: translateX(-20px) rotate(-5deg);
		}
		100% {
			opacity: 0;
			transform: translateX(-30px) rotate(-10deg);
		}
	}

	@keyframes logoSlideFromTopRight {
		0% {
			opacity: 0;
			transform: translate(20px, -30px) rotate(15deg);
		}
		20% {
			opacity: 1;
			transform: translate(0, 0) rotate(0deg);
		}
		85% {
			opacity: 1;
			transform: translate(0, 0) rotate(0deg);
		}
		95% {
			opacity: 0;
			transform: translate(15px, -20px) rotate(10deg);
		}
		100% {
			opacity: 0;
			transform: translate(20px, -30px) rotate(15deg);
		}
	}

	@keyframes logoSlideFromBottom {
		0% {
			opacity: 0;
			transform: translateY(30px);
		}
		25% {
			opacity: 1;
			transform: translateY(0);
		}
		85% {
			opacity: 1;
			transform: translateY(0);
		}
		95% {
			opacity: 0;
			transform: translateY(20px);
		}
		100% {
			opacity: 0;
			transform: translateY(30px);
		}
	}

	@keyframes breakC {
		0% { transform: translateX(0) rotate(0deg); }
		60% { transform: translateX(-28px) rotate(-14deg); }
		80% { transform: translateX(-24px) rotate(-11deg); }
		100% { transform: translateX(-25px) rotate(-12deg); }
	}

	@keyframes breakSun {
		0% { transform: translate(0, 0) rotate(0deg); }
		60% { transform: translate(23px, -32px) rotate(17deg); }
		80% { transform: translate(19px, -26px) rotate(14deg); }
		100% { transform: translate(20px, -28px) rotate(15deg); }
	}

	@keyframes breakTriangle {
		0% { transform: translateY(0) rotate(0deg); }
		60% { transform: translateY(32px) rotate(6deg); }
		80% { transform: translateY(26px) rotate(4deg); }
		100% { transform: translateY(28px) rotate(5deg); }
	}

	.logo-c {
		animation: logoSlideFromLeft 9s cubic-bezier(0.16, 1, 0.3, 1) infinite;
		transform-origin: center center;
	}

	.logo-sun {
		animation: logoSlideFromTopRight 9s cubic-bezier(0.16, 1, 0.3, 1) infinite;
		animation-delay: 0.15s;
		transform-origin: center center;
	}

	.logo-triangle {
		animation: logoSlideFromBottom 9s cubic-bezier(0.16, 1, 0.3, 1) infinite;
		animation-delay: 0.3s;
		transform-origin: center center;
	}

	/* On hover, break apart with bounce animation */
	.animated-logo:hover .logo-c {
		animation: breakC 0.7s cubic-bezier(0.16, 1, 0.3, 1) forwards;
	}

	.animated-logo:hover .logo-sun {
		animation: breakSun 0.7s cubic-bezier(0.16, 1, 0.3, 1) forwards;
		animation-delay: 0.05s;
	}

	.animated-logo:hover .logo-triangle {
		animation: breakTriangle 0.7s cubic-bezier(0.16, 1, 0.3, 1) forwards;
		animation-delay: 0.1s;
	}

	/* Fallback for reduced motion */
	@media (prefers-reduced-motion: reduce) {
		.logo-svg {
			display: none;
		}

		.logo-fallback.logo-dark {
			display: block;
		}

		.logo-fallback.logo-light {
			display: none;
		}

		:global([data-theme="light"]) .logo-fallback.logo-dark {
			display: none;
		}

		:global([data-theme="light"]) .logo-fallback.logo-light {
			display: block;
		}
	}
</style>
