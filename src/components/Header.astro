---
import "@/styles/colors.css";

const navItems = [
	{ label: "Home", href: "/" },
	{ label: "Projects", href: "/projects" },
	{ label: "Resume", href: "/resume" },
];

const currentPath = Astro.url.pathname;
---

<header class="site-header">
	<nav class="nav-container">
		<a href="/" class="logo">
			<img src="/images/favicon.svg" alt="Logo" class="logo-img" />
		</a>
		<ul class="nav-links">
			{navItems.map((item, i) => (
				<li class="nav-item" style={`--delay: ${i * 0.1}s`}>
					<a
						href={item.href}
						class:list={["nav-link", { active: currentPath === item.href || (item.href !== "/" && currentPath.startsWith(item.href)) }]}
					>
						{item.label}
					</a>
				</li>
			))}
		</ul>
	</nav>
</header>

<style>
	.site-header {
		position: sticky;
		top: 0;
		z-index: 100;
		background: var(--color-background);
	}

	.nav-container {
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: space-between;
		max-width: 1100px;
		margin: 0 auto;
		padding: 1rem 2rem;
	}

	.logo {
		display: flex;
		align-items: center;
		opacity: 0;
		animation: headerSlideLeft 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
	}

	.logo-img {
		width: 56px;
		height: 56px;
		transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
	}

	.logo:hover .logo-img {
		transform: scale(1.15) rotate(-5deg);
	}

	.nav-links {
		display: flex;
		flex-direction: row;
		align-items: center;
		gap: 0.5rem;
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.nav-item {
		opacity: 0;
		animation: headerSlideRight 0.5s cubic-bezier(0.16, 1, 0.3, 1) forwards;
		animation-delay: var(--delay);
	}

	.nav-link {
		display: block;
		position: relative;
		padding: 0.5rem 1rem;
		font-size: 0.85rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		color: var(--color-text);
		border: 2px solid transparent;
		transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
	}

	.nav-link::after {
		content: "";
		position: absolute;
		bottom: 0;
		left: 50%;
		width: 0;
		height: 2px;
		background: var(--color-accent);
		transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
		transform: translateX(-50%);
	}

	.nav-link:hover {
		color: var(--color-accent);
		transform: translateY(-2px);
	}

	.nav-link:hover::after {
		width: 80%;
	}

	.nav-link.active {
		background: var(--color-accent);
		color: var(--color-background);
		border-color: var(--color-accent);
	}

	.nav-link.active::after {
		display: none;
	}

	.nav-link.active:hover {
		transform: none;
	}

	@keyframes headerSlideLeft {
		from {
			opacity: 0;
			transform: translateX(-20px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	@keyframes headerSlideRight {
		from {
			opacity: 0;
			transform: translateX(20px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	@media (max-width: 700px) {
		.nav-container {
			padding: 0.75rem 1rem;
		}

		.logo-img {
			width: 44px;
			height: 44px;
		}

		.nav-link {
			padding: 0.4rem 0.6rem;
			font-size: 0.75rem;
		}
	}
</style>
