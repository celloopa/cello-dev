---
import "@/styles/colors.css";

const navItems = [
	{ label: "Projects", href: "/projects" },
	{ label: "Visuals", href: "/visuals" },
	{ label: "Resume", href: "/resume" },
];

const currentPath = Astro.url.pathname;
---

<header class="site-header">
	<nav class="nav-container">
		<a href="/" class="logo">
			<img src="/images/favicon.svg" alt="Logo" class="logo-img" />
		</a>
		<div class="nav-right">
			<ul class="nav-links">
				{navItems.map((item, i) => (
					<li class="nav-item" style={`--delay: ${i * 0.1}s`}>
						<a
							href={item.href}
							class:list={["nav-link", { active: currentPath === item.href || (item.href !== "/" && currentPath.startsWith(item.href)) }]}
						>
							{item.label}
						</a>
					</li>
				))}
			</ul>
			<button id="header-menu-btn" class="menu-btn" aria-label="Open menu">
				<span class="menu-key"></span>
				<span class="menu-label">Menu</span>
			</button>
		</div>
	</nav>
</header>

<script>
	function initHeaderMenu() {
		const menuBtn = document.getElementById("header-menu-btn");
		const menuKey = menuBtn?.querySelector<HTMLElement>(".menu-key");
		const menuLabel = menuBtn?.querySelector<HTMLElement>(".menu-label");

		function detectOS() {
			const userAgent = navigator.userAgent.toLowerCase();
			if (
				userAgent.includes("mac") ||
				userAgent.includes("iphone") ||
				userAgent.includes("ipad")
			)
				return "mac";
			if (userAgent.includes("win")) return "windows";
			if (userAgent.includes("linux")) return "linux";
			return "other";
		}

		function isTouchDevice() {
			return "ontouchstart" in window || navigator.maxTouchPoints > 0;
		}

		const isMac = detectOS() === "mac";
		const isTouch = isTouchDevice();

		if (menuBtn && menuKey && menuLabel) {
			if (isTouch) {
				menuKey.style.display = "none";
			} else {
				menuKey.textContent = isMac ? "âŒ˜K" : "Ctrl+K";
			}

			menuBtn.addEventListener("click", () => {
				window.dispatchEvent(new CustomEvent("toggleKeyboardMenu"));
			});
		}
	}

	document.addEventListener("DOMContentLoaded", initHeaderMenu);
	document.addEventListener("astro:after-swap", initHeaderMenu);
</script>

<style>
	.site-header {
		position: sticky;
		top: 0;
		z-index: 100;
		background: var(--color-background);
		margin-bottom: 8rem;
	}

	.nav-container {
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: space-between;
		max-width: 1100px;
		margin: 0 auto;
		padding: 1rem 2rem;
	}

	.logo {
		display: flex;
		align-items: center;
		opacity: 0;
		animation: headerSlideLeft 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
	}

	.logo-img {
		width: 56px;
		height: 56px;
		transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
	}

	.logo:hover .logo-img {
		transform: scale(1.15) rotate(-5deg);
	}

	.nav-right {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.nav-links {
		display: flex;
		flex-direction: row;
		align-items: center;
		gap: 0.5rem;
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.nav-item {
		opacity: 0;
		animation: headerSlideRight 0.5s cubic-bezier(0.16, 1, 0.3, 1) forwards;
		animation-delay: var(--delay);
	}

	.nav-link {
		display: block;
		position: relative;
		padding: 0.5rem 1rem;
		font-size: 0.85rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		color: var(--color-text);
		border: 2px solid transparent;
		transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
	}

	.nav-link::after {
		content: "";
		position: absolute;
		bottom: 0;
		left: 50%;
		width: 0;
		height: 2px;
		background: var(--color-accent);
		transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
		transform: translateX(-50%);
	}

	.nav-link:hover {
		color: var(--color-accent);
		transform: translateY(-2px);
	}

	.nav-link:hover::after {
		width: 80%;
	}

	.nav-link.active {
		background: var(--color-accent);
		color: var(--color-background);
		border-color: var(--color-accent);
	}

	.nav-link.active::after {
		display: none;
	}

	.nav-link.active:hover {
		transform: none;
	}

	.menu-btn {
		display: flex;
		align-items: center;
		gap: 0.4rem;
		padding: 0.5rem 0.75rem;
		background: transparent;
		border: 2px solid var(--color-text);
		cursor: pointer;
		opacity: 0;
		animation: headerSlideRight 0.5s cubic-bezier(0.16, 1, 0.3, 1) 0.2s forwards;
		transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
	}

	.menu-btn:hover {
		background: var(--color-accent);
		border-color: var(--color-accent);
	}

	.menu-btn:hover .menu-key {
		background: var(--color-background);
		color: var(--color-accent);
	}

	.menu-btn:hover .menu-label {
		color: var(--color-background);
	}

	.menu-key {
		display: inline-block;
		background: var(--color-text);
		color: var(--color-background);
		font-size: 0.7rem;
		font-weight: 700;
		padding: 0.15rem 0.35rem;
		letter-spacing: 0.03em;
		transition: all 0.3s ease;
	}

	.menu-label {
		font-size: 0.8rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		color: var(--color-text);
		transition: color 0.3s ease;
	}

	@keyframes headerSlideLeft {
		from {
			opacity: 0;
			transform: translateX(-20px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	@keyframes headerSlideRight {
		from {
			opacity: 0;
			transform: translateX(20px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	@media (max-width: 700px) {
		.nav-container {
			padding: 0.75rem 1rem;
		}

		.nav-right {
			gap: 0.5rem;
		}

		.logo-img {
			width: 44px;
			height: 44px;
		}

		.nav-links {
			display: none;
		}

		.menu-btn {
			padding: 0.4rem 0.6rem;
		}

		.menu-label {
			font-size: 0.75rem;
		}
	}
</style>
