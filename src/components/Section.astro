---
const { title } = Astro.props;
---

<section>
	{title && <h2>{title}</h2>}
	<slot />
</section>

<style>
	section {
		max-width: 1100px;
		margin: 0 auto 32px;
		padding-inline: 2rem;
		background: transparent;
	}

	h2 {
		font-size: 1.5rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		color: var(--color-accent);
		margin: 0 0 0.5rem 0;
	}

	@media (width <= 700px) {
		section {
			padding-inline: 1rem;
		}

		h2 {
			font-size: 1.25rem;
		}
	}
</style>
